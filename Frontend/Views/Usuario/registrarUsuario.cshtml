@model Frontend.Models.Usuario

<div class="container">
    <div class="row mt-5">
        <div class="col-lg-4 bg-white m-auto">
            <h2 class="text-center pt-3">Registrarse</h2>
            <p class="text-center text-muted lead">Crea tu Cuenta</p>
            <form asp-action="registrarUsuario" method="post">
                <span asp-validation-for="Nombre" class="text-danger"></span>
                <div class="input-group mb-3">
                    <span class="input-group-text"><i class="fa fa-user"></i></span>
                    <input asp-for="Nombre" class="form-control" placeholder="Nombre" />
                </div>
                <span asp-validation-for="Apellido" class="text-danger"></span>
                <div class="input-group mb-3">
                    <span class="input-group-text"><i class="fa fa-user"></i></span>
                    <input asp-for="Apellido" class="form-control" placeholder="Apellido" />
                </div>
                <span asp-validation-for="Correo" class="text-danger"></span>
                <div class="input-group mb-3">
                    <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                    <input asp-for="Correo" class="form-control" placeholder="Correo" />
                </div>
                <span asp-validation-for="Telefono" class="text-danger"></span>
                <div class="input-group mb-3">
                    <span class="input-group-text"><i class="fa fa-phone"></i></span>
                    <input asp-for="Telefono" class="form-control" placeholder="Número" /> 
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
                <div class="input-group mb-3">
                    <span class="input-group-text"><i class="fa fa-lock"></i></span>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Contraseña" />                   
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-success">Registrarse</button>
                    <p class="text-center mt-2">
                        ¿Ya tienes una cuenta? <a href="/Usuario/login">Inicia Sesión aquí!</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>